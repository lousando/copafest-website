---
import { storyblokEditable } from "@storyblok/astro";
import Button from "../components/button.astro"

const { blok } = Astro.props;
---

<form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top" {...storyblokEditable(blok)}>
  <input type="hidden" name="cmd" value="_s-xclick">
  <input type="hidden" name="hosted_button_id" value="JT7CB98ACTZGS">
  <div class="field">
    <label for="name_and_call" class="label">
      Name and Call:
    </label>
    <div class="control">
      <input type="text" name="os0" id="name_and_call"
             placeholder="e.g. Bob W1ABC" autocomplete="name" maxlength="200"
             class="input">
    </div>
    <input type="hidden" name="on0" value="Name and Call">
  </div>
  <div class="field">
    <label for="contact_info" class="label">
      Contact Information:
    </label>
    <div class="control">
      <input type="text" name="os1" id="contact_info"
             placeholder="e.g. (555) 123-4567" autocomplete="tel" maxlength="200"
             class="input">
    </div>
    <input type="hidden" name="on1" value="Contact Information">
  </div>
  <Button type="submit" text={blok.button_text} />
</form>
